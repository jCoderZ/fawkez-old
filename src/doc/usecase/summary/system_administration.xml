<uc:usecase xmlns:uc="uc"
            xmlns:db="http://docbook.org/ns/docbook"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="uc
                                http://www.jcoderz.org/xsd/xdoc/usecase-SNAPSHOT.xsd"
            xmlns="http://docbook.org/ns/docbook" id="UC-2" level="Summary">
   <uc:version>$Revision: 1.2 $</uc:version>
   <uc:commitlog>
      $Log:$
   </uc:commitlog>
   <uc:name>System Administration</uc:name>
   <uc:goal>Administration of the system.</uc:goal>
   <uc:scope>Micro Aggregation System Administration</uc:scope>
   <uc:trigger></uc:trigger>
   <uc:priority>medium - productive</uc:priority>
   <uc:response_time></uc:response_time>
   <uc:frequency_of_use></uc:frequency_of_use>
   <uc:actors>
      <uc:primary>
         <uc:name>Operator</uc:name>
         <channel>Web</channel>
      </uc:primary>
      <uc:secondary>
         <uc:name>System</uc:name>
         <channel>WEB</channel>
      </uc:secondary>
   </uc:actors>
   <uc:stakeholder>Operator wants to administer merchant relevant data and settings.</uc:stakeholder>
   <uc:stakeholder>Merchant wants to be configured with the correct settings.</uc:stakeholder>
   <uc:precondition>none</uc:precondition>
   <uc:guarantees>
      <uc:success>none yet</uc:success>
      <minimal>none yet</minimal>
   </uc:guarantees>
   <uc:success>
      <uc:step id="1">Operator registers a new merchant. <uc:ref id="UC-7" actor="Operator"/></uc:step>
      <uc:step id="2">Operator views and filters the merchant list. <uc:ref id="UC-8" actor="Operator"/></uc:step>
      <uc:step id="3">Operator is able to modify merchants data. <uc:ref id="UC-9" actor="Operator"/></uc:step>
      <uc:step id="4">Operator is able to administrate fees. <uc:ref id="UC-10" actor="Operator"/></uc:step>
      <uc:step id="5">Operator is able to administrate payment gateways. <uc:ref id="UC-11" actor="Operator"/></uc:step>
      <uc:step id="6">Operator is able to monitor the system and to get reports from it. <uc:ref id="UC-12" actor="Operator"/></uc:step>
      <uc:step id="7">Operator is able to create and modify scoring rules. <uc:ref id="UC-13" actor="Operator"/></uc:step>
      <uc:step id="8">Operator is able to create and modify aggregation rules. <uc:ref id="UC-14" actor="Operator"/></uc:step>
   </uc:success>
